generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "sqlserver"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model Category {
  id               Int        @id(map: "PK__categori__3213E83F76BC8ACC") @default(autoincrement())
  name             String     @db.NVarChar(255)
  parentCategory   Int?
  Categories       Category?  @relation("CategoriesToCategories", fields: [parentCategory], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "FK__categorie__paren__6477ECF3")
  other_Categories Category[] @relation("CategoriesToCategories")
  Product          Product[]
}

model User {
  id      Int     @id(map: "PK__users__3213E83FE0493D4C") @default(autoincrement())
  name    String  @db.VarChar(50)
  phone   String  @db.VarChar(20)
  address String? @db.VarChar(100)
  email   String? @db.VarChar(50)
  dni     String? @db.VarChar(20)
}

model Product {
  id          Int    @id @default(autoincrement())
  slug        String @db.NVarChar(255)
  alt         String @db.NVarChar(255)
  categoryId  Int
  name        String @db.NVarChar(255)
  subtitle    String @db.NVarChar(255)
  desc        String @db.NVarChar(MAX)
  jsonDetails String @db.NVarChar(MAX)

  category Category @relation(fields: [categoryId], references: [id])
}
